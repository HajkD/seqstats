Package: seqstats
Title: A Statistical Analysis Package for Biological Sequences 
Version: 0.0.1
Authors@R: person("Hajk-Georg", "Drost",
                role = c("aut", "cre"),
                email = "hajk-georg.drost@tuebingen.mpg.de",
